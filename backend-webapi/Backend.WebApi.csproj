    <ImplicitUsings>enable</ImplicitUsings>
    <RootNamespace>Backend.WebApi</RootNamespace>
    <GenerateDocumentationFile>True</GenerateDocumentationFile>
    <RunPostBuildEvent>OnOutputUpdated</RunPostBuildEvent>
